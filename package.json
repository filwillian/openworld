{
  "name": "openworld",
  "version": "1.0.0",
  "private": true,
  "description": "A Metaverse for Artificial Intelligence",
  "scripts": {
    "dev": "concurrently \"pnpm --filter server dev\" \"pnpm --filter client dev\"",
    "server": "pnpm --filter server dev",
    "client": "pnpm --filter client dev",
    "ghost": "pnpm --filter ghost dev",
    "build": "pnpm --filter server build && pnpm --filter client build",
    "format": "prettier --write \"packages/*/src/**/*.{ts,tsx}\" \"packages/client/app/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"packages/*/src/**/*.{ts,tsx}\" \"packages/client/app/**/*.{ts,tsx}\"",
    "clean": "rm -rf packages/*/node_modules packages/*/.next packages/*/dist"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.8.1"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
